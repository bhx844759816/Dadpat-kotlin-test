<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <com.benbaba.dadpat.host.view.SearchBluetoothView
            android:id="@+id/searchView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:center_drawable="@drawable/icon_wifi_center"
    />
    <TextView
            android:id="@+id/wifHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="15dp"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/wifi_help"
            android:gravity="center_horizontal"
            android:text="@string/help"
            android:textColor="@color/white"
            android:textSize="9sp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/wifHelp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/wifi_shop"
            android:gravity="center_horizontal"
            android:text="@string/shop"
            android:textColor="@color/white"
            android:textSize="9sp"
            android:visibility="gone"/>
</RelativeLayout>
