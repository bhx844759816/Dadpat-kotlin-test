<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/id_update_app_bj"
        android:layout_width="330dp"
        android:layout_height="120dp"
        android:background="@drawable/remind_network_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/remind"
        android:textColor="@color/text_music_stroke_color"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/id_update_app_bj"
        app:layout_constraintRight_toRightOf="@+id/id_update_app_bj"
        app:layout_constraintTop_toTopOf="@+id/id_update_app_bj"
        />
    <TextView
        android:id="@+id/promptMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/sex_color"
        android:text="是否删除插件"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/id_update_app_bj"
        android:layout_marginBottom="30dp"
        app:layout_constraintRight_toRightOf="@id/id_update_app_bj"
        app:layout_constraintBottom_toBottomOf="@id/id_update_app_bj"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/id_update_app_bj"
        app:layout_constraintRight_toRightOf="@+id/id_update_app_bj"
        app:layout_constraintTop_toBottomOf="@+id/id_update_app_bj"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/promptCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@drawable/set_cancel_button"
            />
        <ImageView
            android:id="@+id/promptConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:layout_marginLeft="15dp"
            android:background="@drawable/set_energe_button"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
