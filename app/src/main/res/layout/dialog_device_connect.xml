<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content"

>
    <ImageView
            android:id="@+id/bg"
            android:layout_width="440dp"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_device_connect_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
    </ImageView>
    <ImageView
            android:id="@+id/bluetooth_item_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_device_connect_item_bg"
            app:layout_constraintLeft_toLeftOf="@id/bg"
            app:layout_constraintRight_toRightOf="@id/bg"
            app:layout_constraintTop_toTopOf="@id/bg"
            android:layout_marginTop="60dp"
    />
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/id_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"
    />
    <TextView
            android:id="@+id/bluetoothConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/bluetooth_item_bg"
            app:layout_constraintTop_toTopOf="@id/bluetooth_item_bg"
            app:layout_constraintBottom_toBottomOf="@id/bluetooth_item_bg"
            app:layout_constraintRight_toRightOf="@id/id_guideline"
            android:text="蓝牙连接"
            android:gravity="center_vertical"
            android:textColor="#333333"
            android:textSize="18sp"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/drawable_bluetooth_item"
    />
    <TextView
            android:id="@+id/wifiConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/bluetooth_item_bg"
            app:layout_constraintBottom_toBottomOf="@id/bluetooth_item_bg"
            app:layout_constraintLeft_toLeftOf="@id/id_guideline"
            app:layout_constraintRight_toRightOf="@id/bluetooth_item_bg"
            android:text="WIFI连接"
            android:textColor="#333333"
            android:textSize="18sp"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/drawable_wifi_item"
    />

</androidx.constraintlayout.widget.ConstraintLayout>