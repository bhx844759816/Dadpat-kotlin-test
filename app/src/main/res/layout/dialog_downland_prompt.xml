<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/id_update_app_bj"
        android:layout_width="330dp"
        android:layout_height="120dp"
        android:background="@drawable/remind_network_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/remind"
        android:textColor="@color/text_music_stroke_color"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/id_update_app_bj"
        app:layout_constraintRight_toRightOf="@+id/id_update_app_bj"
        app:layout_constraintTop_toTopOf="@+id/id_update_app_bj"
        />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="280dp"
        android:textColor="@color/sex_color"
        android:textSize="18sp"
        android:text="当前是移动网络,是否继续下载"
        app:layout_constraintTop_toBottomOf="@id/id_setting_title"
        app:layout_constraintBottom_toBottomOf="@id/id_update_app_bj"
        app:layout_constraintLeft_toLeftOf="@id/id_update_app_bj"
        app:layout_constraintRight_toRightOf="@id/id_update_app_bj"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="@+id/id_update_app_bj"
        app:layout_constraintRight_toRightOf="@+id/id_update_app_bj"
        app:layout_constraintTop_toBottomOf="@+id/id_update_app_bj">

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@drawable/set_cancel_button" />

        <ImageView
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@drawable/set_energe_button" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
